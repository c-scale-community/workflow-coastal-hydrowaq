rule run_delft3dfm:
    input: 
        "workflow/logs/2023-01-23_preprocess_era5.done",
        "workflow/logs/2023-01-23_preprocess_cmems.done",
        "workflow/logs/preprocess_fes2012.done",
        "workflow/logs/2023-01-23_copy_preprocessed_data_to_model_input_folder.done"
    output:
        touch("workflow/logs/2023-01-23_run_delft3dfm.done")
    log:
        "workflow/logs/2023-01-23_run_delft3dfm.log"
    shell:
        """
        docker run \
            -v /home/$USER/use-case-hisea/fm_model:/data \
            --shm-size=4gb \
            --ulimit stack=-1 \
            -t deltares/delft3dfm:latest 
        """

rule cleanup:
    shell:
        "rm -rf data/era5/ data/cmems/"

